#!/usr/bin/env bash

env
dbname=$1
NRECS=1000
NRUNS=10000

set -x

destdb=${TESTCASE}dest${TESTID}
DEST_DBDIR=${DBDIR}/$destdb
mkdir -p $DEST_DBDIR

# use copycomdb2 to create a physical replicant

$COPYCOMDB2_EXE -H ${destdb} -y localhost ${DBDIR}/$dbname.lrl $DEST_DBDIR

if [ ! $? -eq 0 ]; then
    echo "copycomdb2 failed"
    exit 1
fi

df $DBDIR | awk '{print $1 }' | grep "tmpfs\|nfs" && echo "setattr directio 0" >> $DEST_DBDIR/${destdb}.lrl

if [ -n "$PMUXPORT" ] ; then
    echo "portmux_port $PMUXPORT" >> $DEST_DBDIR/${destdb}.lrl
    echo "portmux_bind_path $pmux_socket" >> $DEST_DBDIR/${destdb}.lrl
fi

out=
while [[ "$out" != "1" ]]; do
    out=$(cdb2sql --tabs ${CDB2_OPTIONS} $destdb local 'select 1' 2>/dev/null)
    sleep 1
done

# requires $1 and $2
equal_queries() {
    lhs = $1 | sort 
    rhs = $2 | sort

    return lhs == rhs
}

# iterate over each test
for sql in `ls *.src.sql | sort -V`; do
    src_update=$(cdb2sql -s --tabs -f $sql ${CDB2_OPTIONS} $dbnme default 2>&1) 
    query_cmd=$(echo $sql | sed 's/\.src\.sql//').query.sql
    src=$(cdb2sql -s --tabs -f $query_cmd ${CDB2_OPTIONS} $dbnme default 2>&1) 
    dest=$(cdb2sql -s --tabs -f $query_cmd ${CDB2_OPTIONS} $destdb localhost 2>&1)

    failed=1
    for i in `seq 1 10`;
    do
        if [ ! equal_queries src dest -eq 0 ]; then
            echo 'Replicant not updated'
            sleep 1
            src=$(cdb2sql -s --tabs -f $query_cmd ${CDB2_OPTIONS} $dbnme default 2>&1) 
            dest=$(cdb2sql -s --tabs -f $query_cmd ${CDB2_OPTIONS} $destdb localhost 2>&1)
            continue
        fi
        
        failed=0
        break
    done


    if [ $failed -eq 1  ]; then
        echo 'Failed.'
        exit 1
    fi
done


# src_add_table=$(cdb2sql ${CDB2_OPTIONS} $dbname default "select * from t1" | sort | md5sum)
# dest_add_table=$(cdb2sql ${CDB2_OPTIONS} $destdb local "select * from t1" | sort | md5sum)
# echo "src $src dest $dest"

# for i in $(seq 1 $NRECS); do
