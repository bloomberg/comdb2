#!/usr/bin/env bash
bash -n "$0" | exit 1

# Grab my database name.
dbnm=$1

# Maxcount
maxcnt=1000

# Counter
counter=0

# Out file
log=log.txt

# Days column
days=days.txt

# Check file
chk=out.txt

# Fastinit table
cdb2sql ${CDB2_OPTIONS} $dbnm default "truncate t1"

function addrecord
{
    typeset db=$1
    typeset iter=$2
    typeset str="iter$iter"

    cdb2sql -s ${CDB2_OPTIONS} $db default "insert into t1(a,b,c,d,e) values($iter, \"$str\", now() - cast($iter as days), cast(\"$iter\" as days), cast($iter as years))" &> /dev/null
}

echo "Adding records"

# Add a bunch of records
while [[ $counter -lt $maxcnt ]] ; do

    addrecord $dbnm $counter

    let counter=counter+1

done

# Select back
cdb2sql ${CDB2_OPTIONS} $dbnm default "select now() - c from t1 order by now() - c" > $log 2>&1

# The 'day' part should be the same
awk '{print $3}' $log > $days

diff $days $chk

if [[ $? != 0 ]]; then

    echo "Sorting error with intervals"
    cat $log
    exit 1

fi

echo "Success"
