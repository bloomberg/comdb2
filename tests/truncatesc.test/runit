function assert_notable
{
    [[ $debug == "1" ]] && set -x
    typeset func="assert_notable"
    typeset tbl=$1
    typeset tries=$total_tries
    write_prompt $func "Assert $tbl does not exist"
    chk=$($CDB2SQL_EXE -tabs $CDB2_OPTIONS $DBNAME default "select count(*) from $tbl" 2>/dev/null)
    r=$?
    while [[ $r == 0 ]] ; do 
        let tries=tries-1
        [[ "$tries" == 0 ]] && failexit $func "table $tbl still exists"
        sleep 1
        chk=$($CDB2SQL_EXE -tabs $CDB2_OPTIONS $DBNAME default "select count(*) from $tbl" 2>/dev/null)
        r=$?
    done
    if [[ "$physrep" == 1 ]]; then
        sleep $repsleep
        tries=$total_tries
        rep=$($CDB2SQL_EXE -tabs $CDB2_OPTIONS $repname --host localhost "select count(*) from $tbl" 2>/dev/null)
        r=$?
        while [[ $r == 0 ]]; do
            let tries=tries-1
            [[ "$tries" == 0 ]] && failexit $func "table $tbl in rep still exists"
            sleep 1
            rep=$($CDB2SQL_EXE -tabs $CDB2_OPTIONS $repname --host localhost "select count(*) from $tbl" 2>/dev/null)
            r=$?
        done
    fi
}

