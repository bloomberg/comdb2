function get_dtastripe
{
    [[ $debug == "1" ]] && set -x
    typeset func="get_dtastripe"
    repeat_command "select value from comdb2_tunables where name='dtastripe'" $func "tabs"
}

function get_dtastripe_rep
{
    [[ $debug == "1" ]] && set -x
    typeset func="get_dtastripe_rep"
    r=$($CDB2SQL_EXE -tabs $CDB2_OPTIONS $repname --host localhost "select value from comdb2_tunables where name='dtastripe'")
    echo "$r"
}

function assert_stripe
{
    [[ $debug == "1" ]] && set -x
    typeset func="assert_stripe"
    write_prompt $func "Assert $1 stripes"
    typeset tries=$total_tries
    typeset stp=$(get_dtastripe)
    while [[ "$1" != "$stp" ]] ; do 
        let tries=tries-1
        [[ "$tries" == 0 ]] && failexit $func "was expecting $1 stripes but have $stp"
        sleep 1
        stp=$(get_dtastripe)
    done
    if [[ "$physrep" == 1 ]]; then
        sleep $repsleep
        typeset tries=$total_tries
        typeset rep=$(get_dtastripe_rep)
        while [[ "$1" != "$rep" ]] ; do 
            let tries=tries-1
            [[ "$tries" == 0 ]] && failexit $func "was expecting phys-rep $1 stripe but have $rep"
            sleep 1
            rep=$(get_dtastripe_rep)
        done
    fi
}

function get_rowlocks
{
    [[ $debug == "1" ]] && set -x
    typeset func="get_rowlocks"
    typeset tries=$total_tries
    repeat_command "exec procedure sys.cmd.send(\"stat\")" $func tabs | egrep "rowlocks is"
}

function get_rowlocks_rep
{
    [[ $debug == "1" ]] && set -x
    typeset func="get_rowlocks_rep"
    r=$($CDB2SQL_EXE -tabs $CDB2_OPTIONS $repname --host localhost "exec procedure sys.cmd.send(\"stat\")" | egrep "rowlocks is")
    echo "$r"
}

function verify_rowlocks
{
    [[ $debug == "1" ]] && set -x
    typeset func="verify_rowlocks"
    typeset tries=$total_tries
    typeset rlocks=$(get_rowlocks)
    write_prompt $func "Assert rowlocks is $1"
    while [[ "$1" != "$rlocks" ]] ; do 
        let tries=tries-1
        [[ "$tries" == 0 ]] && failexit $func "expected rowlocks to be $1 not $rlocks"
        sleep 1
        rlocks=$(get_rowlocks)
    done
    if [[ "$physrep" == 1 ]]; then
        sleep $repsleep
        typeset rep=$(get_rowlocks_rep)
        tries=$total_tries
        while [[ "$1" != "$rep" ]]; do
            let tries=tries-1
            [[ "$tries" == 0 ]] && failexit $func "expected phys-rep rowlocks to have $1 stripes but have $rep"
            sleep 1
            rep=$(get_rowlocks_rep)
        done
    fi
}

function get_partition_start_time
{
    [[ $debug == "1" ]] && set -x
    typeset func="get_partition_start_time"
    perl -MPOSIX -le 'local $ENV{TZ}=":/usr/share/zoneinfo/UTC"; print strftime "%Y-%m-%dT%H%M%S UTC", localtime(time()+60)'
}

