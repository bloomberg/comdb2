#!/usr/bin/env bash
bash -n "$0" | exit 1

[[ $debug == "1" ]] && set -x

# Grab my database name.
dbnm=$1

export sleeptime=5
export repsleep=5
export repname=rep${DBNAME}
export repdir=${DBDIR}/$repname
export comdb2ar=${COMDB2AR_EXE}
export myhost=$(hostname)
export physrep=1
export replive=1
export reader=1
export verbose_reader=0
export reader_pid=0
export max_reader_error=10
export core_rep_on_failexit=1
export total_tries=60
export replog=$repdir/log.txt
export COPYCOMDB2_EXE=${BUILDDIR}/db/copycomdb2
export begin_lsn=""

function write_prompt
{
    typeset func=$1
    echo "[$func] $2"
}

function failexit
{
    [[ $debug == "1" ]] && set -x
    typeset func="failexit"
    typeset f=$1
    write_prompt $func "$f failed: $2"
    if [[ "$core_rep_on_failexit" == 1 ]]; then
        kill -6 $(cat $repdir/${repname}.pid)
    else
        kill -9 $(cat $repdir/${repname}.pid)
    fi
    [[ "$reader_pid" -gt 0 ]] && kill -9 $reader_pid
    touch ${DBNAME}.failexit # runtestcase script looks for this file
    exit -1
}

function repeat_command_master
{
    [[ $debug == "1" ]] && set -x
    typeset func="repeat_command_master"
    typeset cmd="$1"
    typeset err="$2"
    typeset tab_arg="$3"
    typeset master=$(get_master)
    typeset tries=$total_tries
    typeset tabs=""
    [[ -n "$tab_arg" ]] && tabs="-tabs"

    x=$($CDB2SQL_EXE $tabs $CDB2_OPTIONS $DBNAME --host $master "$cmd" 2>&1)
    r=$?
    while [[ "$r" != 0 ]]; do
        let tries=tries-1
        [[ "$tries" == 0 ]] && failexit "failed $err"
        sleep 1
        x=$($CDB2SQL_EXE $tabs $CDB2_OPTIONS $DBNAME --host $master "$cmd" 2>&1)
        r=$?
    done
    echo "$x"
}

function repeat_command
{
    [[ $debug == "1" ]] && set -x
    typeset func="repeat_command"
    typeset cmd="$1"
    typeset err="$2"
    typeset tab_arg="$3"
    typeset tries=$total_tries
    typeset tabs=""
    [[ -n "$tab_arg" ]] && tabs="-tabs"

    x=$($CDB2SQL_EXE $tabs $CDB2_OPTIONS $DBNAME default "$cmd")
    r=$?
    while [[ "$r" != 0 ]]; do
        let tries=tries-1
        [[ "$tries" == 0 ]] && failexit "failed $err"
        sleep 1
        x=$($CDB2SQL_EXE $CDB2_OPTIONS $DBNAME default "$cmd")
        r=$?
    done
    echo "$x"
}

function reader_thread
{
    [[ $debug == "1" ]] && set -x
    typeset func="reader_thread"
    typeset err=0
    while :; do
        x=$($CDB2SQL_EXE $CDB2_OPTIONS $DBNAME default "select count(*) from reader_table" 2>&1)
        if [[ $? != 0 ]]; then
            let err=err+1
            [[ "$err" -gt "$max_reader_error" ]] && failexit "Too many reader errors"
            write_prompt $func "Error, count $err: $x"
        elif [[ "$verbose_reader" == 1 ]]; then
            write_prompt $func "$x"
        fi
    done
}

function create_reader
{
    [[ $debug == "1" ]] && set -x
    typeset func="create_reader"
    write_prompt $func "Creating reader_thread"
    repeat_command "create table reader_table(a int)" "create_reader table reader_table" "" >/dev/null
    repeat_command "insert into reader_table select * from generate_series limit 10000" "insert into reader_table" "" >/dev/null
    reader_thread &
    export reader_pid=$!
}

function make_phys_rep
{
    [[ $debug == "1" ]] && set -x
    typeset func="make_phys_rep"

    mkdir -p $repdir

    if [[ -z "$CLUSTER" ]]; then
        cl="-y @localhost"
    else
        cl="-y @$(echo $CLUSTER | tr ' ' ',')"
    fi

    if [[ -n "$CLUSTER" ]]; then
        if [[ "$CLUSTER" =~ .*$myhost.* ]]; then
            rmt=""
        else
            clarray=($CLUSTER)
            rmt="${clarray[0]}:"
        fi
    fi

    write_prompt $func "Creating physical rep $repname"
    ${COPYCOMDB2_EXE} -x ${COMDB2_EXE} -H $repname $cl $rmt${DBDIR}/${DBNAME}.lrl $repdir $repdir
    if [ ! $? -eq 0 ]; then
        write_prompt $func "Copycomdb2 failed"
        exit 1
    fi

    write_prompt $func "Starting replicant database, replog is $replog"
    if [[ -n "$replive" ]]; then
        ( $COMDB2_EXE $repname -lrl $repdir/${repname}.lrl -pidfile $repdir/${repname}.pid >$replog 2>&1) &
    else
        ( timeout $TEST_TIMEOUT $COMDB2_EXE $repname -lrl $repdir/${repname}.lrl -pidfile $repdir/${repname}.pid >$replog 2>&1) &
    fi
}

function get_current_lsn
{
    [[ $debug == "1" ]] && set -x
    typeset func="get_current_lsn"
    typeset tries=$total_tries
    repeat_command "exec procedure sys.cmd.send(\"flush\")" "flush" "tabs" >/dev/null
    sleep $sleeptime
    repeat_command "exec procedure sys.cmd.send(\"flush\")" "flush" "tabs" >/dev/null
    sleep $sleeptime
    repeat_command "select lsn from comdb2_transaction_logs(NULL, NULL, 4) limit 1" "get_current_lsn" "tabs"
}

function insert_record
{
    [[ $debug == "1" ]] && set -x
    typeset func="insert_records"
    typeset tbl=$1
    repeat_command "insert into $tbl values(1)" "insert_record" "tabs" >/dev/null
}

function bulk_insert_records
{
    [[ $debug == "1" ]] && set -x
    typeset func="insert_records"
    typeset tbl=$1
    typeset cnt=$2
    typeset chunk=10000
    j=0
    while [[ $cnt -gt 0 ]]; do
        if [[ $cnt -lt $chunk ]]; then
            amt=$cnt
        else
            amt=$chunk
        fi
        $CDB2SQL_EXE -tabs $CDB2_OPTIONS $DBNAME default "insert into $tbl select * from generate_series(1, $amt)" >/dev/null
        let cnt=$(( cnt - amt ))
    done
}

function get_comdb2_columns
{
    [[ $debug == "1" ]] && set -x
    typeset func="get_comdb2_columns"
    repeat_command "select * from comdb2_columns" "get_comdb2_columns" "tabs"
}

function get_comdb2_columns_rep
{
    [[ $debug == "1" ]] && set -x
    typeset func="get_comdb2_columns_rep"
    r=$($CDB2SQL_EXE --tabs $CDB2_OPTIONS $repname --host localhost "select * from comdb2_columns")
    echo "$r"
}

function create_table
{
    [[ $debug == "1" ]] && set -x
    typeset func="create_table"
    typeset tries=$total_tries
    repeat_command "create table $1(a int)" "create table $1" "" >/dev/null
}

function assert_comdb2_columns
{
    [[ $debug == "1" ]] && set -x
    typeset func="assert_comdb2_columns"
    typeset prev_cols=$1
    typeset tries=$total_tries
    write_prompt $func "Assert comdb2_columns is the same"
    typeset curr_cols=$(get_comdb2_columns)
    while [[ "$prev_cols" != "$curr_cols" ]] ; do 
        let tries=tries-1
        [[ "$tries" == 0 ]] && failexit $func "comdb2_columns changed"
        sleep 1
        curr_cols=$(get_comdb2_columns)
    done

    if [[ "$physrep" == 1 ]]; then
        sleep $repsleep
        tries=$total_tries
        typeset phys_cols=$(get_comdb2_columns_rep)
        write_prompt $func "Assert comdb2_columns on phys-rep is the same"
        while [[ "$phys_cols" != "$prev_cols" ]]; do
            let tries=tries-1
            [[ "$tries" == "0" ]] && failexit $func "phys-rep comdb2_columns changed"
            sleep 1
            phys_cols=$(get_comdb2_columns_rep)
        done
    fi
}

function get_master
{
    [[ $debug == "1" ]] && set -x
    typeset func="get_master"
    typeset tries=$total_tries
    repeat_command "exec procedure sys.cmd.send(\"bdb cluster\")" "get_master" "tabs" | grep MASTER | cut -f1 -d":" | tr -d '[:space:]'
}

function truncate_log
{
    [[ $debug == "1" ]] && set -x
    typeset func="truncate_log"
    typeset tries=$total_tries
    typeset lsn="$1"
    write_prompt $func "Truncating to $lsn"
    repeat_command_master "exec procedure sys.cmd.truncate_log(\"$lsn\")" "truncate_log" >/dev/null
    typeset newlsn=$(get_current_lsn)
    write_prompt $func "Current lsn is $newlsn"
    sleep $sleeptime
}

