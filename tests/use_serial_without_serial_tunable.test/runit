#!/usr/bin/env bash

test_running_serializable_txn_emits_warning() {
    local -r serial_txn_sql=$(cat <<'SQL'
set transaction serializable
begin
select 1
commit
SQL
)

    if cdb2sql ${CDB2_OPTIONS} ${DBNAME} default - <<< "${serial_txn_sql}" > /dev/null; then
        echo "Should have failed to run serializable transaction"
        return 1
    fi

    # WARNING: The following string is hardcoded and depends on upstream log message.
    local -r error="SERIALIZABLE REQUIRES MODIFICATIONS TO THE LRL FILE"
    if ! grep -q "${error}" "${TESTDIR}/logs/${DBNAME}.db"; then
        echo "Did not find expected error in log"
        return 1
    fi
}

test_running_serializable_txn_emits_warning
