#!/usr/bin/env bash
bash -n "$0" | exit 1

dbnm=$1
echo adding table
cdb2sql -s ${CDB2_OPTIONS} $dbnm default "drop table large" &> /dev/null
cdb2sql -s ${CDB2_OPTIONS} $dbnm default "create table large { `cat 1000defcol.csc2 ` }" > /dev/null

echo "Inserting 2010 records"
echo "BEGIN" > in.txt
i=0
while [ $i -lt 2010 ] ; do
    let i=i+1
    echo "insert into large(col1) values($i)"
done  >> in.txt
echo "COMMIT" >> in.txt 
cdb2sql ${CDB2_OPTIONS} -f in.txt $dbnm default > in.out
if [ $? -ne 0 ] ; then
    echo "insert had errors"
    exit 1
fi


echo altering table
cdb2sql ${CDB2_OPTIONS} $dbnm default "alter table large { `cat 1000defcol_v2.csc2 ` }"

echo selecting 100 times
loop=1

while [[ $loop -le 100 ]]
do
    cdb2sql ${CDB2_OPTIONS} $dbnm default "select col1,col2 from large where col1 > 2000 order by col1" >output.actual
    diff output.actual output.expected >/dev/null
    if [[  $? -ne 0 ]]
    then
        echo "diff output.actual output.expected"
        echo "^^^ failed."
        exit 1
    fi

    let loop=$loop+1
done
cdb2sql ${CDB2_OPTIONS} $dbnm default 'exec procedure sys.cmd.verify("large")' >> verify.actual

if ! grep succeeded verify.actual > /dev/null ; then
    echo "Verify output failed."
    exit 1
fi

echo "Passed."
