#!/bin/bash

debug=1
# Runs the insert utility
[[ "$debug" == 1 ]] && set -x

db=$1
multithd=${TESTSBUILDDIR}/multithd

if [[ -z "$stage" ]]; then
    echo "Setting stage to 'default' (set 'stage' var to override)."
    stage="default"
fi

function runtest
{
    [[ "$debug" == 1 ]] && set -x
    $multithd -d $db -f $CDB2_CONFIG
    r=$?
    if [[ $r != 0 ]]; then
        echo "Testcase failure, rcode=$r"
        exit 1
    fi
}

runtest

echo "Success"
exit 0
