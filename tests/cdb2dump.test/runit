#!/bin/bash
bash -n "$0" | exit 1

CNT=100
i=0
dbnm=$1
set -e
set -x

cdb2sql ${CDB2_OPTIONS} $dbnm default "create table t1 options rec none { `cat t1.csc2 ` }"

while [ $i -lt $CNT ] ; do
 let i=i+1
 echo "insert into t1(a, b) values (1, '0123456789')"
done | cdb2sql ${CDB2_OPTIONS} $dbnm default -

function getmaster {
    cdb2sql --tabs ${CDB2_OPTIONS} $dbnm default 'exec procedure sys.cmd.send("bdb cluster")' | grep MASTER | cut -f1 -d":" | tr -d '[:space:]'
}

function failexit
{
    echo "Failed $1"
    exit -1
}



master=`getmaster`
cdb2sql ${CDB2_OPTIONS} --host $master $dbnm "exec procedure sys.cmd.send('flush')"

out=$TMPDIR/t1_dump.txt

myhostname=`hostname`
if [ "$master" != "$myhostname" ] ; then
    ssh -o StrictHostKeyChecking=no $master "rm -f ${SRCHOME}/cdb2_dump; ln ${SRCHOME}/comdb2 ${SRCHOME}/cdb2_dump"
    ssh -o StrictHostKeyChecking=no $master "find $DBDIR | grep '/t1_.*.datas0' | xargs ${SRCHOME}/cdb2_dump -f $out"
    scp -o StrictHostKeyChecking=no $master:$out $out 
else
    rm -f ${SRCHOME}/cdb2_dump; ln ${SRCHOME}/comdb2 ${SRCHOME}/cdb2_dump
    find $DBDIR | grep '/t1_.*.datas0' | xargs ${SRCHOME}/cdb2_dump -f $out
fi


PATTERN=""

pcnt=`grep -c $PATTERN $out`
if [ $pcnt -ne $CNT ] ; then
   failexit "$cnt -ne $CNT"
fi

echo Success
