CREATE PROCEDURE trigger_1 VERSION 'trigger_1' {
  local function main(event)
    local tbl = db:table("tbl", {{"i", "int"}})
    local tp = event.type
    local inew, iold
    if tp == 'add' then
      inew = event.new.i
      tbl:insert({i=inew})
    elseif tp == 'del' then
      iold = event.old.i
      tbl:insert({i=iold})
    end
    return db:exec("SELECT i, COUNT(*) FROM tbl GROUP BY i")
  end
}$$

CREATE PROCEDURE consumer_1 VERSION 'trigger_1' {
  local function main()
    local consumer = db:consumer()
    while true do
      db:begin()
      consumer:consume()
      db:commit()
    end
  end
}$$

