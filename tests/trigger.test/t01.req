CREATE PROCEDURE trigger_1 VERSION 'trigger_1' {
  local function main(event)
    local tbl = db:table("tbl", {{"i", "int"}})
    local tp = event.type
    local inew, iold
    if tp == 'add' then
      inew = event.new.i
      tbl:insert({i=inew})
    elseif tp == 'del' then
      iold = event.old.i
      tbl:insert({i=iold})
    end
    return 0
  end
}$$

