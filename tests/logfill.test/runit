#!/bin/bash

# Verify log-fills

[[ "$debug" == 1 ]] && set -x
needcluster=1
db=$1

if [[ "$needcluster" = "1" && -z "$CLUSTER" ]]; then
    echo "This test is only relevant for a CLUSTERED installation."
    exit 0
fi

if [[ -z "$stage" ]]; then
    echo "Setting stage to 'default' (set 'stage' var to override)."
    stage="default"
fi

function createtables
{
    [[ "$debug" == 1 ]] && set -x
    $CDB2SQL_EXE ${CDB2_OPTIONS} $DBNAME $stage "create table t1 {schema{int id int val null=yes} keys{ dup \"id\" = id }}" >/dev/null 2>&1
}

function waitforcoherency
{
    [[ "$debug" == 1 ]] && set -x
    heal
    ma=$($CDB2SQL_EXE -tabs $db $stage "exec procedure sys.cmd.send('bdb cluster')" | egrep MASTER | egrep lsn) 
    m=${ma%%:*}
    c=$(ssh $m "$CDB2SQL_EXE -tabs $db @localhost \"exec procedure sys.cmd.send('bdb cluster')\"")
    echo "$c"
    echo "$c" | egrep COHERENT
    r=$?
    while [[ $r == 0 ]] ; do
        echo "$(date) waiting for $db cluster to become coherent"
        heal
        sleep 1
        ma=$($CDB2SQL_EXE -tabs $db $stage "exec procedure sys.cmd.send('bdb cluster')" | egrep MASTER | egrep lsn) 
        m=${ma%%:*}
        c=$(ssh $m "$CDB2SQL_EXE -tabs $db @localhost \"exec procedure sys.cmd.send('bdb cluster')\"")
        echo "$c"
        echo "$c" | egrep COHERENT
        r=$?
    done
}

function insertforever
{
    sql=./sql.$$.$RANDOM.txt
    j=0
    echo "BEGIN" > $sql
    while [[ $j -lt $1 ]]; do 
        echo "INSERT INTO T1 VALUES (1,1)" >> $sql
        let j=j+1
    done
    echo "COMMIT" >> $sql
    timeout=$(echo $TEST_TIMEOUT | sed 's/[^0-9]*//g')
    ttimeout=$(echo "$timeout / 1.2" | bc)
    chr=$(echo $TEST_TIMEOUT | sed 's/[0-9]*//g')
    j=0

    machine=$($CDB2SQL_EXE -tabs ${CDB2_OPTIONS} $db default 'exec procedure sys.cmd.send("bdb cluster")' | grep -v MASTER | egrep lsn | head -1 | cut -f1 -d":" | tr -d '[:space:]')

    while [[ $j -lt $2 ]]; do 
        timeout $ttimeout$chr yes "$(cat $sql)" | $CDB2SQL_EXE --host $machine ${CDB2_OPTIONS} $DBNAME default - > /dev/null 2>&1 &
        let j=j+1
    done

    wait
}

function runtestwithoptions
{
    [[ "$debug" == 1 ]] && set -x
    createtables
    insertforever 1000 3
    #insertforever 1000 10
}

function runtest
{
    [[ "$debug" == 1 ]] && set -x
    runtestwithoptions
}

createtables
runtest

echo "Success"
exit 0
