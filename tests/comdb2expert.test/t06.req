-- Test expert mode in an explicit transaction with writes
insert into t6 values(1)
insert into t6 values(2)
insert into t6 values(3)

-- Test expert mode in explicit transaction with a write before expert query
set expert on
begin
insert into t6 values(4)
select * from t6 where i = 1;
commit

set expert off
select 'should not see me' from t6 where i=4

-- Test expert mode in explicit transaction with write after expert query
set expert on
begin
select * from t6 where i = 3;
insert into t6 values(5)
commit

set expert off
select 'should not see me' from t6 where i=5
