FROM ubuntu:xenial

RUN apt-get update && \
    apt-get install -y \
    cmake \
    bc \
    bison \
    build-essential \
    flex \
    gawk \
    liblz4-dev \
    libprotobuf-c-dev \
    libreadline-dev \
    libsqlite3-dev \
    libssl-dev \
    libunwind-dev \
    libz-dev \
    make \
    ncurses-dev \
    protobuf-c-compiler \
    tcl \
    uuid-dev \
    libz1 \
    liblz4-tool \
    libprotobuf-c1 \
    libreadline6 \
    libsqlite3-0 \
    libuuid1 \
    libz1 \
    tzdata \
    iputils-ping \
    net-tools \
    iproute2 \
    socat \
    time \
    strace \
    openssh-server

COPY . /comdb2.build

RUN cd /comdb2.build &&  \
    make clean &&  \
    make -j4 &&  \
    make install &&  \
    cd / &&  \
    mkdir comdb2 &&  \
    cp /comdb2.build/tests/docker/client / && \
    cp /comdb2.build/tests/docker/database / && \
    mv comdb2.build/tests comdb2/ &&  \
    mkdir comdb2/build && \
    cp /opt/bb/bin/* comdb2/ &&  \
    mkdir comdb2/db && \
    cp /opt/bb/bin/* comdb2/db/ && \
    rm -fr comdb2.build && \
    apt-get clean

ENV PATH      $PATH:/opt/bb/bin
