#!/usr/bin/env bash
bash -n "$0" | exit 1

# Test case to verify libcdb2api.so.

dbname=$1
if [[ -z $dbname ]] ; then
    echo dbname missing
    exit 1
fi

ldd ${TESTSBUILDDIR}/cdb2_client | grep "libcdb2api.so => not found" > /dev/null
if [ $? -ne 1 ]; then
  echo 'Could not find libcdb2api.so' >&2
  exit 1
fi

${TESTSBUILDDIR}/cdb2_client $dbname
if [ $? -ne 0 ]; then
  exit 1
fi

exit 0
