#!/bin/bash
num=500
sec=0.1

spnum=500
spsec=0.1

ARG=${ARG:-akdb}

cdb2sql $ARG - <<'EOF'
create procedure ins version 'sptest' {
local function main()
    local stmt = db:prepare("select * from t order by i")
    local t = db:table('t')
    for i = 1, 10 do
        db:begin()
        for j = 1, 10 do
            t:insert({i = (i - 1) * 10 + j})
        end
        db:commit()
        stmt:emit()
    end
end
}$$
put default procedure ins 'sptest'


create procedure del version 'sptest' {
local function main()
    local stmt = db:prepare("select * from t order by i")
    for i = 1, 10 do
        db:begin()
        for j = 1, 10 do
            db:exec("delete from t where i = " ..  tostring((i - 1) * 10 + j))
        end
        db:commit()
        stmt:emit()
    end
end
}$$
put default procedure del 'sptest'


create procedure tmp version 'sptest' {
local function main()
    local tmp = db:table('tmp', {{'i', 'int'}})
    db:exec('insert into tmp select i from t')
    db:exec("select * from tmp"):emit()
end
}$$
put default procedure tmp 'sptest'
EOF


for ((i=0;i<${num};++i)); do
echo 'create table t (i int)$$'
sleep $sec
done | cdb2sql $ARG - &


for ((i=0;i<${num};++i)); do
echo 'create index i on t(i)'
sleep $sec
done | cdb2sql $ARG - &


for ((i=0;i<${num};++i)); do
echo 'alter table t add j int$$'
sleep $sec
done | cdb2sql $ARG - &


for ((i=0;i<${num};++i)); do
echo 'alter table t add k int$$'
sleep $sec
done | cdb2sql $ARG - &


for ((i=0;i<${num};++i)); do
echo 'alter table t drop j$$'
sleep $sec
done | cdb2sql $ARG - &


for ((i=0;i<${num};++i)); do
echo 'alter table t drop k$$'
sleep $sec
done | cdb2sql $ARG - &


for ((i=0;i<${num};++i)); do
echo 'truncate table t'
sleep $sec
done | cdb2sql $ARG - &


for ((i=0;i<${num};++i)); do
echo 'drop table t'
sleep $sec
done | cdb2sql $ARG - &


for ((i=0;i<${spnum};++i)); do
echo 'exec procedure ins()'
sleep $spsec
done | cdb2sql $ARG - &


for ((i=0;i<${spnum};++i)); do
echo 'exec procedure del()'
sleep $spsec
done | cdb2sql $ARG - &


for ((i=0;i<${spnum};++i)); do
echo 'exec procedure tmp()'
sleep $spsec
done | cdb2sql $ARG - &


wait


cdb2sql $ARG 'drop table if exists t' || exit 1
cdb2sql $ARG 'create table t (a int, b int, c int)' || exit 1
cdb2sql $ARG 'insert into t values(0, 1, 2),(1,2,3),(2,3,4)' || exit 1
cdb2sql $ARG 'select * from t' || exit 1
cdb2sql $ARG 'exec procedure del()' || exit 1
cdb2sql $ARG 'exec procedure ins()' || exit 1
cdb2sql $ARG 'exec procedure tmp()' || exit 1
exit 0
